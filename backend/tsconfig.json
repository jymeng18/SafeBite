{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames":  true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports":  true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "dist"]
}